<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="TOP_CENTER" nodeOrientation="RIGHT_TO_LEFT" styleClass="card" stylesheets="@main.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.triolingo.app.CardController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <AnchorPane>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
               <children>
                  <Label fx:id="titlelbl" alignment="CENTER" layoutX="104.0" prefHeight="47.0" prefWidth="385.0" style="-fx-font-size: 32;" text="TITLE" AnchorPane.leftAnchor="104.0" AnchorPane.rightAnchor="104.0" />
                  <Button fx:id="audiobtn" layoutX="8.0" layoutY="4.0" mnemonicParsing="false" onAction="#tts" text="Audio" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="494.0" />
               </children>
            </AnchorPane>
            <Label fx:id="translationlbl" style="-fx-font-size: 28; -fx-text-fill: -subtext0col;" text="TRANSLATION" visible="false">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Label>
            <HBox fx:id="successbuttonsbox" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="57.0" prefWidth="580.0" visible="false">
               <children>
                  <Button fx:id="correctbtn" mnemonicParsing="false" onAction="#correct" style="-fx-font-size: 24; -fx-text-fill: -greencol; -fx-fill: -greencol;" styleClass="cardbuttoncorrect" text="Correct" />
                  <Button fx:id="wrongbtn" mnemonicParsing="false" onAction="#wrong" style="-fx-font-size: 24; -fx-text-fill: -redcol; -fx-fill: -redcol;" styleClass="cardbuttonwrong" text="Wrong">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
               </children>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="revealbtn" mnemonicParsing="false" onAction="#reveal" style="-fx-font-size: 24;" text="Reveal">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <ImageView fx:id="imageimg" fitHeight="400.0" fitWidth="0.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</HBox>
