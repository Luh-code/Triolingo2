<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="card" stylesheets="@main.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.triolingo.app.DummyCardController">
   <children>
      <Label fx:id="titlelbl" alignment="TOP_LEFT" style="-fx-font-size: 32;" text="TITLE">
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin></Label>
      <Label fx:id="translationlbl" style="-fx-font-size: 28; -fx-text-fill: -subtext0col;" text="TRANSLATION" visible="false">
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </Label>
      <HBox fx:id="successbuttonsbox" alignment="CENTER" prefHeight="57.0" prefWidth="580.0" visible="false">
         <children>
            <Button fx:id="correctbtn" mnemonicParsing="false" onAction="#correct" style="-fx-font-size: 24; -fx-text-fill: -greencol; -fx-fill: -greencol;" styleClass="cardbuttoncorrect" text="Correct" />
            <Button fx:id="wrongbtn" mnemonicParsing="false" onAction="#wrong" style="-fx-font-size: 24; -fx-text-fill: -redcol; -fx-fill: -redcol;" styleClass="cardbuttonwrong" text="Wrong">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
         </children>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </HBox>
      <Button fx:id="revealbtn" mnemonicParsing="false" onAction="#reveal" style="-fx-font-size: 24;" text="Reveal">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
